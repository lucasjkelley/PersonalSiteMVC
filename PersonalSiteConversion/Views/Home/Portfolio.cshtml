@{
    ViewData["Title"] = "Portfolio";
    ViewBag.PageName = "Portfolio";
}

<main id="main">
    <!-- ======= Portfolio Section ======= -->
    <section id="portfolio" class="portfolio">
        <div class="container" data-aos="fade-up">
            <div class="section-title">
                <h2>Portfolio</h2>
                <p>Hover and select a project link below to see more information</p>
                <br />

            </div>

            <div class="row" data-aos="fade-up" data-aos-delay="100">
                <div class="col-lg-12 d-flex justify-content-center"></div>
            </div>

            <div class="row portfolio-container"
                 data-aos="fade-up"
                 data-aos-delay="200">
                <div class="col-lg-4 col-md-6 portfolio-item filter-app">
                    <div class="portfolio-wrap">
                        <img src="~/assets/img/portfolio/dungeon.jpg"
                             class="img-fluid"
                             alt="" />
                        <div class="portfolio-info">
                            <h4>Dungeon of Demons</h4>
                            <p>Console App</p>
                            <div class="portfolio-links">
                                <a href="~/assets/img/portfolio/dungeon.jpg"
                                   data-gallery="portfolioGallery"
                                   class="portfolio-lightbox"
                                   title="Console App">
                                    <i class="bx bx-plus"></i>
                                </a>
                                <a href="@Url.Action("PortfolioDetails", "Home")"
                                   class="portfolio-details-lightbox"
                                   data-glightbox="type: external"
                                   title="Portfolio Details">
                                    <i class="bx bx-link"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6 portfolio-item filter-web">
                    <div class="portfolio-wrap">
                        <img src="~/assets/img/portfolio/borderlands_storefront_4.PNG"
                             class="img-fluid"
                             alt="" />
                        <div class="portfolio-info">
                            <h4>Store Front</h4>
                            <p>Web Commerce Application</p>
                            <div class="portfolio-links">
