@{
    ViewBag.Title = "Portfolio Details";
    Layout = "~/Views/Shared/_LayoutLightbox.cshtml";
}

<main id="main">

    <!-- ======= Portfolio Details Section ======= -->
    <section id="portfolio-details" class="portfolio-details">
        <div class="container">

            <div class="row gy-4">

                <div class="col-lg-8">
                    <div class="portfolio-details-slider swiper">
                        <div class="swiper-wrapper align-items-center">

                            <div class="swiper-slide">
                                <img class="img-fluid vh-75 m-auto" src="~/assets/img/portfolio/borderlands_storefront_1.png" alt="storefront homepage">
                            </div>

                            <div class="swiper-slide">
                                <img class="img-fluid vh-75 m-auto" src="~/assets/img/portfolio/borderlands_storefront_2.png" alt="database diagram for store">
                            </div>

                            <div class="swiper-slide">
                                <img class="img-fluid vh-75 m-auto" src="~/assets/img/portfolio/borderlands_storefront_3.png" alt="mvc code snippet">
                            </div>

                        </div>
                        <div class="swiper-pagination"></div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="portfolio-info">
                        <h3>Border Lands Store</h3>
                        <ul>
                            <li><strong>Category</strong>: Web Application</li>
                            <li><strong>Client</strong>: Centriq Project</li>
                            <li><strong>Project date</strong>: May 2023</li>
                            <li><strong>URL</strong>: <a href="http://storefront.lucasjkelley.com" target="_blank">Storefront Site Link</a></li>
                            <li><strong>URL</strong>: <a href="https://github.com/lucasjkelley/BorderlandsStore" target="_blank">GitHub</a></li>
                        </ul>
                    </div>
                    <div class="portfolio-description">
                        <h2>An Online Storefront</h2>
                        <p>
                            A secure application for managing product data. The application is built to simulate an online store front with a shopping cart. Administrators have the ability to manage product, category, and vendor data.
                        </p>
                    </div>
                </div>

            </div>

        </div>
    </section><!-- End Portfolio Details Section -->

</main><!-- End #main -->